<% include partials/header %>
<!-- <div class="container mainsite"> -->

	<div class="ui main text container">
		<div class="ui huge header">
		The Never Ending Story
		</div>
		<% blogs.forEach(function(post){ %>
		<div class="ui top attached segment">
			<div class="ui divided items">
				<div class="item">
					<div class="image">
						<img class="ui fluid image" src="<%= post.image %>">
					</div>
					<div class="content">
						<a class="header" href="#">
							<h4><%= post.title %></h4>
						</a>
						<div class="meta">
							<span><%= post.created.toDateString() %></span>
						</div>
						<div class="description">
							<p><%- post.content.substring(0,100) %>...</p>
						</div>
						<div class="extra">
							<a class="positive ui right floated button" href="/blog/<%=post._id %>">Read More</a>

						</div>
					</div>					
				</div>
			</div>
			
		</div>
		<% }) %>
	</div>
<!-- </div> -->


