<% include partials/header %>
<div class="ui main text container segment">
	<div class="ui huge header">Edit Page</div>
	<form class="ui form" action="/blog/<%= posts._id %>?_method=PUT" method="POST">
		<div class="field">
			<label>Title</label>
			<input type="text" name="post[title]" value="<%= posts.title %>">
		</div>
		<div class="field">
			<label>Order</label>
			<input type="number" name="post[order]" placeholder="Whats the chapter/index number"  min="1" required>
		</div>
		<div class="field">
			<label>Image</label>
			<input type="text" name="post[image]" value="<%= posts.image %>">
		</div>
		<div class="field">
			<label>Content</label>
			<textarea name="post[content]" placeholder="Write something here..." required><%= posts.content %></textarea>
		</div>
		<input class="ui green basic big button" type="submit">
	</form>
</div>



<% include partials/footer %>